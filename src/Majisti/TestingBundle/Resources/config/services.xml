<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="Majisti\Testing\Database\DatabaseCacheCoordinator" public="true">
            <argument key="$cacheDirectory">%kernel.cache_dir%</argument>
            <argument key="$logsDirectory">%kernel.logs_dir%</argument>
        </service>

        <service id="Majisti\Testing\ConsoleTester" class="Majisti\Testing\ConsoleTester" />

        <service id="Majisti\Testing\Database\CachedSqliteSchemaLoader">
            <argument key="$cacheDirectory">%kernel.cache_dir%</argument>
        </service>

        <service id="Majisti\Testing\Database\SqliteDatabaseBackupTool">
            <argument key="$backupDirectory">%kernel.cache_dir%</argument>
        </service>

        <service id="Majisti\Testing\Fixtures\PhpFixturesLoader" />
        <service id="Majisti\Testing\Fixtures\AliceFixturesLoader" />
    </services>
</container>
